{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": ["website/build", "dist", "target", ".next"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 120,
    "ignore": []
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
   "linter": {
    "enabled": false,
    "rules": {
      "a11y": {
        "noAutofocus": "error",
        "noBlankTarget":"error",
        "noPositiveTabindex": "off",
        "useAltText": "off",
        "useAnchorContent": "off",
        "useButtonType": "error",
        "useKeyWithClickEvents": "error",
        "useKeyWithMouseEvents": "error",
        "useValidAnchor": "error"
      },
      "complexity": {
        "noExtraBooleanCast": "error",
        "noMultipleSpacesInRegularExpressionLiterals": "error",
        "noUselessFragments": "off",
        "useFlatMap": "error",
        "useOptionalChain":  "error",
        "useSimplifiedLogicExpression": "error"
      },
      "correctness": {
        "noChildrenProp": "error",
        "noConstAssign": "warn",
        "noEmptyPattern": "off",
        "noNewSymbol": "off",
        "noRenderReturnValue": "off",
        "noUndeclaredVariables": "warn",
        "noUnnecessaryContinue": "error",
        "noUnreachable": "warn",
        "noUnusedVariables": "error",
        "noVoidElementsWithChildren": "error",
        "useValidForDirection": "error"
      },
      "performance": {
        "noDelete": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off",
        "noDangerouslySetInnerHtmlWithChildren": "off"
      }
      ,
      "style": {
        "noArguments": "off",
        "noImplicitBoolean": "warn",
        "noNegationElse": "error",
        "noShoutyConstants": "off",
        "useBlockStatements": "error",
        "useFragmentSyntax": "off",
        "useSelfClosingElements": "warn",
        "useShorthandArrayType": "error",
        "useSingleCaseStatement": "off",
        "useSingleVarDeclarator": "warn",
        "useTemplate": "warn",
        "useWhile": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noAsyncPromiseExecutor": "off",
        "noCatchAssign": "warn",
        "noCommentText": "error",
        "noCompareNegZero": "error",
        "noDebugger": "error",
        "noDoubleEquals":"warn",
        "noDuplicateParameters": "error",
        "noExplicitAny": "warn",
        "noFunctionAssign": "error",
        "noImportAssign": "error",
        "noLabelVar": "warn",
        "noShadowRestrictedNames": "warn",
        "noSparseArray":"warn",
        "noUnsafeNegation":"error",
        "useValidTypeof": "warn"
      },
      "nursery":{
      }
    }
  }
}
